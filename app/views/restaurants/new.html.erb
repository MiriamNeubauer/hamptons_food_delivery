<html>

<head>
	<title></title>
		<h1> Order from your Hamptons favorites:</h1>
</head>

<body>
<div id="search_form"> 
<form method="get" action="/restaurants">

	<input type="text" name="restaurant[town]" placeholder ="town">
	<input type="text" name="restaurant[cuisine]" placeholder ="cuisine">
<br>
<br>
	<input type="submit">
</form>

</div>

<div>
	<h2> Or choose a Hamptons restaurants directly:</h2>

	<% @response1.each do |city, response| %>

	<h3> <%= city %> </h3>    
	
			<% response["businesses"].each do |restaurant| %>

				<p> <a href="/restaurants/<%=restaurant["id"]%>"> <%=	restaurant["name"]%> </a> </p>

			<% end %>

<%end %>


</div>



</body>
</html>


